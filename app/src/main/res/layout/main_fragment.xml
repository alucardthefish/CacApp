<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de inicio:"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvRegisterDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de idas al baño:"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvDepositionCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:gravity="center"
        android:padding="10dp"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableRow
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:text="Días transcurridos" />

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/tvDayCounter"
                android:paddingRight="10dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:text="Frecuencia promedio" />

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/tvAvgFrequency"
                android:layout_gravity="start" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:text="Fecha ultima deposición" />

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/tvDepositionStatus"
                android:layout_gravity="start" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:text="Tiempo transcurrido" />

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/tvLastDeposition"
                android:layout_gravity="start" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddPoopRecord"
        android:text="Registrar Deposición"
        android:textColor="@android:color/white"
        android:background="#FF5733"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"></Button>


</LinearLayout>