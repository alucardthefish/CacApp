<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SymptomsMainFragment">

    <FrameLayout
        android:id="@+id/symptomMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNoSymptoms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Symptom Main Fragment Under Construction"
            android:layout_gravity="center"
            android:gravity="center"/>

        <com.sop.cacapp.CustomViewClasses.CustomRecyclerView
            android:id="@+id/customRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddSymptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_white_24dp"
            android:contentDescription="Agregar symptom"
            android:layout_margin="16dp" />

    </FrameLayout>




</LinearLayout>